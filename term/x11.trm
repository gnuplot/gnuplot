TERM_PUBLIC void
X11_update_opts(void)
{
    if (X11_ipc && (UNSET != do_raise || UNSET != persist)) {
	fprintf(X11_ipc, "X %d %d\n", do_raise, persist);
	fflush(X11_ipc);
    }
}
