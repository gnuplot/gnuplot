TERM_PUBLIC int X11_make_palette(t_sm_palette *palette)
{
    /* TODO: also a check for abs(formula[RGB]) < colorFormulae ?
     *       or is this /certainly/ done here ? */
    if (palette) {
	if (X11_ipc) {
	    fprintf(X11_ipc, "%c%c %d %d %d %c\n",
		X11_GR_MAKE_PALETTE, palette->colorMode, palette->formulaR,
		palette->formulaG, palette->formulaB, palette->positive);
	    /* we don't need the rest of the struct (joze) */
	    fflush(X11_ipc);
	} else {
	    fprintf(stderr, "(X11_make_palette) 0 == X11_ipc\n");
	    return -1;
	}
    }
    return 0;
}

