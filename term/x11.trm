void
X11_unset_pm3d(void)
{
    if (X11_ipc) {
	PRINT1("%c\n", X11_GR_RELEASE_PALETTE);
	FFLUSH();
    }
    return;
}

TERM_PUBLIC void X11_set_color(double gray)
{
    fputc(X11_GR_SET_COLOR, X11_ipc);
    PRINT1("%f\n", gray);
    FFLUSH();
    return;
}

TERM_PUBLIC void X11_filled_polygon(int points, gpiPoint *corners)
{
    int i;
    fputc(X11_GR_FILLED_POLYGON, X11_ipc);
    PRINT1("%04d", points);
    for (i = 0; i < points; i++)
	PRINT2("%04d%04d", corners[i].x, corners[i].y);
    fputc('\n', X11_ipc);
    FFLUSH();
    return;
}

