    TGIF_SOLID, TGIF_DASHED,
    TGIF_FONT,
    TGIF_OTHER,
    TGIF_DEFAULT
};

static struct gen_table TGIF_opts[] =
{
    {"mo$nochrome", TGIF_MONOCHROME},
    {"c$olor", TGIF_COLOR},
    {"c$olour", TGIF_COLOR},
    {"linew$idth", TGIF_LINEWIDTH},
