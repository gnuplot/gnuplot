TERM_PUBLIC int
TGIF_text_angle(int ang)
{
    switch (ang) {
	case   90:	uActAngle = 3; break;
	case  180:
	case -180:	uActAngle = 2; break;
	case  -90:
	case  270:	uActAngle = 1; break;
	default:	uActAngle = 0; break;
    }
    return (TRUE);
}				/* TGIF_text_angle */

