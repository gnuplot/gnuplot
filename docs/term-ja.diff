+ 	printf " (p.~\\pageref{%s})",s;
+ 	if(match(s,/ [^ ]+$/)) s=substr(s,RSTART+1);
+ 	gsub(/_/," ",s);
+ 	printf "\\index{%s}}",s;
+ 	s=srest;
+     }
+     printf "%s",s;
+ }
